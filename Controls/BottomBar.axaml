<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:AnypocApp.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="50"
             x:Class="AnypocApp.Controls.BottomBar"
             x:DataType="controls:BottomBar"
             x:CompileBindings="False">

    <Border Background="#F5F5F5" Height="50" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
        <Grid ColumnDefinitions="*,Auto,*" Margin="12,0">
            <!-- Left Info -->
            <StackPanel Grid.Column="0"
                       Orientation="Horizontal"
                       Spacing="12"
                       VerticalAlignment="Center">
                <TextBlock Text="{Binding LeftInfo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          Foreground="#666666"
                          FontSize="12"/>
            </StackPanel>

            <!-- Center Info -->
            <StackPanel Grid.Column="1"
                       Orientation="Horizontal"
                       Spacing="8"
                       VerticalAlignment="Center">
                <TextBlock Text="{Binding CenterInfo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          Foreground="#333333"
                          FontSize="12"
                          FontWeight="Medium"/>
            </StackPanel>

            <!-- Right Info -->
            <StackPanel Grid.Column="2"
                       Orientation="Horizontal"
                       Spacing="12"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center">
                <TextBlock Text="{Binding RightInfo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          Foreground="#666666"
                          FontSize="12"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
